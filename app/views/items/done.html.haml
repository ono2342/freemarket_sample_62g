.transaction-done
  = render "shared/logo-header"
  .transaction-done__contents
    .transaction-done__contents__content
      .transaction-done-message
        %i.far.fa-clock
          %span.transaction-done-message__top__message
            発送をお待ちください
        .transaction-done-message__bottom
          出品者からの発送通知をお待ちください
      %h2.transaction-done-message__info
        購入が完了しました
      .transaction-done-img
        .transaction-done-img__main
          = image_tag @detail.images[0],height:"200",width:"200"

        .transaction-done-img__name
          = @detail.name

      .transaction-done-charge
        .transaction-done-charge__main
          = number_with_delimiter @detail.price
          %span
            円（税込）送料込み
      .transaction-done-delivery
        .transaction-done-delivery__content
          %h3.transaction-done-delivery__content__for
            配送先
          .user-input-address
            .purchase-zip_code
              =@user.address.zip_code.to_s.insert(3, "-")
            .purchase-address
              =@user.address.prefecture.name
              =@user.address.city
              =@user.address.house_number
              =@user.address.building_name

      .transaction-done-payment
        .transaction-done-payment__main
          %h3.transaction-done-payment__main__way
            支払い方法
          %p.method-of-payment__main__info
            カード情報 
          .method-of-payment__main__card__img
            .card-number
              = "**** **** **** " + @default_card_information.last4
            .card-day
              - exp_month = @default_card_information.exp_month.to_s
              - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
              = exp_month + " / " + exp_year
            .card-company
              = image_tag "//www-mercari-jp.akamaized.net/assets/img/card/visa.svg?2356129156", alt: "", height: "20", width: "49"
      .transaction-done-bottom
        .transaction-done-bottom__main
          .transaction-done-bottom__main__flow
            発送通知後の流れ
          .transaction-done-bottom__main__text
            %p
              商品を受け取ったら
            %p
              出品者の評価をしましょう。
            %p
              購入代金が出品者に振り込まれます。
            %p
              評価後に取引は完了です。
          = link_to "マイページへもどる",user_path,class:"return-mypage"
          

    


= render "shared/copyright-footer"



